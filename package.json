{
  "name": "ffva",
  "displayName": "FFVA",
  "description": "Find File Via Alias. Find and open files in a workspace using custom user-defined aliases.",
  "version": "0.1.1",
  "publisher": "andy-parrett",
  "author": {
    "name": "Andrew Parrett"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andyp-22/ffva"
  },
  "homepage": "https://github.com/andyp-22/ffva/blob/main/README.md",
  "license": "MIT",
  "galleryBanner": {
    "color": "#66348a",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "open",
    "file",
    "files",
    "search",
    "alias",
    "aliases"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "id": "ffva",
        "title": "FFVA",
        "properties": {
          "ffva.config.aliases": {
            "title": "File Aliases",
            "description": "Array of items, each representing an alias associated with a corresponding file.",
            "type": "array",
            "items": {
              "title": "Alias",
              "description": "An object representing an alias associated with a corresponding file in the workspace.",
              "type": "object",
              "propertyNames": true,
              "properties": {
                "alias": {
                  "title": "Alias Name",
                  "description": "The custom alias to associate with a file, used to open the corresponding file.",
                  "type": "string",
                  "maxLength": 12,
                  "uniqueItems": true
                },
                "uri": {
                  "title": "File Uri",
                  "description": "The uri, or path, to a file within the workspace to associate with the custom alias.",
                  "type": "object",
                  "properties": {
                    "fsPath": {
                      "title": "File System Path",
                      "description": "The string value representation of the corresponding 'file system' path of the file uri (platform-specific, used to open the file).",
                      "type": "string"
                    },
                    "path": {
                      "title": "Path",
                      "description": "The string value representation of the corresponding 'path' segment of the file uri (mainly used for display the uri).",
                      "type": "string"
                    }
                  },
                  "required": [
                    "fsPath",
                    "path"
                  ],
                  "additionalProperties": false
                }
              },
              "required": [
                "alias",
                "uri"
              ],
              "additionalProperties": false
            },
            "readOnly": true,
            "uniqueItems": true,
            "default": [],
            "scope": "window"
          },
          "ffva.config.doAutoClean": {
            "title": "Auto-clean Aliases on File Delete",
            "description": "Configures automatic clean-up of aliases on file deletes.",
            "type": "boolean",
            "default": true,
            "scope": "window"
          },
          "ffva.config.doAutoUpdate": {
            "title": "Auto-update Aliases on File Rename/Move",
            "description": "Configures automatic updates of aliases on file rename or move.",
            "type": "boolean",
            "default": true,
            "scope": "window"
          }
        }
      }
    ],
    "commands": [
      {
        "category": "FFVA",
        "command": "extension.createAlias",
        "title": "Create a new alias for a file."
      },
      {
        "category": "FFVA",
        "command": "extension.removeAlias",
        "title": "Remove an existing alias for a file."
      },
      {
        "category": "FFVA",
        "command": "extension.findFileViaAlias",
        "title": "Find and open a file using an alias."
      },
      {
        "category": "FFVA",
        "command": "extension.purgeAliases",
        "title": "Purge all existing aliases for the workspace."
      },
      {
        "category": "FFVA Config",
        "command": "extension.configAutoClean",
        "title": "Enable or Disable automatic clean-up of aliases on file delete."
      },
      {
        "category": "FFVA Config",
        "command": "extension.configAutoUpdate",
        "title": "Enable or Disable automatic updates of aliases on file rename or move."
      }
    ],
    "keybindings": [
      {
        "command": "extension.createAlias",
        "key": "ctrl+alt+a"
      },
      {
        "command": "extension.removeAlias",
        "key": "ctrl+alt+d"
      },
      {
        "command": "extension.findFileViaAlias",
        "key": "ctrl+alt+p"
      }
    ]
  },
  "scripts": {
    "package": "vsce package",
    "publish": "vsce publish",
    "compile": "tsc -p ./",
    "vscode:prepublish": "npm run compile",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src",
    "pretest": "npm run compile && npm run lint",
    "test": "vscode-test",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.1",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "cross-spawn": "^7.0.5",
    "eslint": "^9.13.0",
    "semantic-release": "^24.2.0",
    "semantic-release-stop-before-publish": "^1.0.0",
    "semantic-release-vsce": "^5.7.4",
    "typescript": "^5.6.3"
  }
}
